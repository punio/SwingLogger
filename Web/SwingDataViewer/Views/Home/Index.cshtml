<section class="basic">
    <h2>データを公開している人たち</h2>
    <div class="box">
        <div class="wraplist">
            @foreach (var logger in Model.Loggers)
            {
                <div class="wrapitem">
                    <a asp-controller="Home" asp-action="Graph" asp-route-id="@logger.Id" class="link"><i class="fas fa-golf-ball"></i> @logger.Name</a>
                </div>
            }

        </div>
    </div>
</section>